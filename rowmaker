#!/bin/bash



while read -r line || [[ -n $line ]]
do
    reltimestamp=$(bc <<< "scale=6; ($(date +%s.%N) - $2)/1" )
    if [[ $line == motion* ]]
    then
        newx=$(echo "$line" | sed -rn 's/.*?a\[0\]=([0-9]+).*/\1/p')
        newy=$(echo "$line" | sed -rn 's/.*?a\[1\]=([0-9]+).*/\1/p')
        if [ -z $newx ]
        then
            newx=$oldx
        fi
        if [ -z $newy ]
        then
            newy=$oldy
        fi

        if ( [ $newx != $oldx ] || [ $newy != $oldy ] ) && [ $newx != '-1' ] && [ $newy != '-1' ]
        then
            :
            echo $reltimestamp,$1,0,n,$newx,$newy
        fi
        oldx=$newx
        oldy=$newy
    elif [[ $line == button* ]]
    then
        button=$(echo "$line" | sed -rn 's/.*?([0-9]+).*/\1/p')
        action=$(echo "$line" | sed -rn 's/.*?press.*/p/p')

        if [ -z $action ]
        then 
            action=r
        fi

        echo $reltimestamp,$1,$button,$action,$oldx,$oldy
    else
        echo $line
    fi
done
